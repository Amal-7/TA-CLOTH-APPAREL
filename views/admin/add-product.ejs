<script>
  function showPreview(event){
    for (i=0;i<=3;i++){
    if(event.target.files.length > 0){
        var src = URL.createObjectURL(event.target.files[i]);
        var preview = document.getElementById(`file-ip-${i}-preview`);
        preview.src = src;
        preview.style.display = "block";

        }
    }
  
}
</script>