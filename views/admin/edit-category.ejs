<div class="form-body p-5 min-vh-100 " >
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Edit Category details</h3>
                    
                    <form id="categForm" action="#">

                        <div class="col-md-12">
                            <label for="product_name" class="form-label">Name</label>
                            <input id="name" class="form-control" type="text" name="name" value="<%= category.name %>"   >
                            <label id="name-error" class="errorLabel text-danger" for="name"></label>
                            <input  name="id" value="<%= locals.category._id %>" style="display: none;">
                        </div>

                        <!-- <div class="col-md-12 mb-3">
                            <label for="product_slug" class="form-label">Slug</label>
                            <input id="email" class="form-control"  name="slug" value="<%= category.slug %>"  >
                             <label id="email-error" class="errorLabel text-danger" for="email"></label>
                             
                             
                            
                        </div> -->



                        <div class="col-md-12 mb-3">
                            <label class="form-label">Description</label>
                            
                            <textarea name="description"  class="form-control" placeholder="<%= category.description %>"  value="<%= category.description %>" rows="4" ></textarea>
                             
                        </div>



                        <div class="form-button mt-3">

                            <button id="button" type="submit" onclick="editCategory()"  class="btn btn-primary">Submit</button>
                            <label id="submit-error" class=" text-danger" for="button" ></label>
                          
                            <!-- <label style="color: rgba(255, 0, 0, 0.616);" for="submit">User Already Exists</label> -->
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function editCategory(){
        $('#categForm').submit((e)=>{
            e.preventDefault()

            $.ajax({
                url:'/admin/category',
                method:'put',
                data:$('#categForm').serialize(),
                success:(response)=>{
                    window.location.replace('/admin/category')
                }

            })
        })
    }
</script>

