    <script>

        function dltProduct(productId){
            $.ajax({
                url:'/cartItemDlt/'+productId,
                method:'delete',
                success:(response)=>{
                    if(response.removeProduct){
                            alert("product removed from cart")
                            location.reload()
                }
            }
            })
        }
       async function changeQty(productId,cart,total,cartTotal,value){
        
            let count =await parseInt(value)
            let quantity =await parseInt(document.getElementById(productId).innerHTML)
            let cartPrice = document.getElementById('cartTotal').innerHTML

               $.ajax ({
                async:false,
                url:'/cart',
                data:{
                    cartId:cart,
                    prodId:productId,
                    count:count,
                    quantity:quantity
                },
                method:'patch',
                success:async(response)=>{
                    if(response.removeProduct){
                            alert("product removed from cart")
                            location.reload()
                       
                
            
                    }else{
                        // location.reload()
                        document.getElementById(productId).innerHTML =await quantity+count
                        document.getElementById(`${productId}-total`).innerHTML=await(parseInt(total))*(quantity+count)
                        document.getElementById('cartTotal').innerHTML= await (parseInt(cartPrice)+(count*total))
                        
                    }
                }
            })
            
            
                 
            
            
        
        }

       
        
    </script>
